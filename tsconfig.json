{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleDetection": "force",

    "module": "NodeNext",
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true,

    "noEmit": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
